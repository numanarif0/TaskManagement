spring.application.name=taskmngm

# Database Configuration - COPY THIS FILE AND CUSTOMIZE FOR YOUR LOCAL SETUP
# This file is gitignored - each developer maintains their own version
# Common ports: 1433 (default), 58182 (named instance SQLEXPRESS)
spring.datasource.url=jdbc:sqlserver://localhost:YOUR_PORT;databaseName=taskmanagement;encrypt=true;trustServerCertificate=true
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver
spring.datasource.username=YOUR_USERNAME
spring.datasource.password=YOUR_PASSWORD

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=false
