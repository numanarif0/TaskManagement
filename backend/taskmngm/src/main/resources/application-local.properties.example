# Template for per-developer overrides (DO NOT COMMIT application-local.properties)
# Copy this file to 'application-local.properties' and fill in your values.

# Credentials (required)
spring.datasource.username=sa
spring.datasource.password=CHANGE_ME

# If your SQL Server port is not 1433
# db.port=1435

# Optional: if main sets a different schema but your DB uses dbo, override here
# spring.jpa.properties.hibernate.default_schema=dbo

# Optional: override host or db name
# db.host=localhost
# db.name=taskmanagement

# Optional: full URL override (has priority over db.* placeholders)
# spring.datasource.url=jdbc:sqlserver://localhost:1435;databaseName=taskmanagement;encrypt=true;trustServerCertificate=true
